@{
}
<table class="table table-bordered table-hover">
    <tr class="bg-dark text-white text-center">
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Customer Address</th>
        <th>Customer Phone</th>
        <th>Customer Email</th>

    </tr>
    @{
        if (ViewData["Customerlist"] != null)
        {
            List<Customer> customerlist = (List<Customer>)ViewData["Customerlist"];
            foreach (var customerdata in customerlist)
            {
                <tr class="text-center">
                    <td>@customerdata.cust_id</td>
                    <td>@customerdata.cust_nm</td>
                    <td>@customerdata.cust_address</td>
                    <td>@customerdata.cust_phone</td>
                    <td>@customerdata.cust_email</td>
                </tr>
            }
        }
    }
</table>
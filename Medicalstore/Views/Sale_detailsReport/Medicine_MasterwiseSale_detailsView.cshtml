@{
}
<form method="post">
    <select name="t1" class="form-select">
        @{
            if (ViewData["medicine"] != null)
            {
                List<Medicine_Master> medicinelist= (List<Medicine_Master>)ViewData["medicine"];
                foreach (var medicinedata in medicinelist)
                {
                    <option value="@medicinedata.med_id">@medicinedata.med_nm</option>
                }
            }
        }
    </select>
    <input type="submit" value="Show" />
</form>
@{
    if (ViewData["sale_Details"] != null)
    {
        <table class="table table-bordered table-hover">
            <tr class="text-center text-white bg-dark">
                <th>Sale Details id</th>
                <th>Sale Date</th>
                <th>Medicine Name</th>
                <th>Rate</th>
                <th>Quantity</th>
                <th>Ammount</th>
                <th>GST</th>
                <th>Total</th>

            </tr>
            @{
                List<dynamic> medicinelist = (List<dynamic>)ViewData["sale_Details"];
                foreach (var medicinedata in medicinelist)
                {
                    <tr class="text-center">
                       <td>@medicinedata.sale_det_id</td>
                        <td>@medicinedata.sale_date</td>
                        <td>@medicinedata.med_nm</td>
                        <td>@medicinedata.rate</td>
                        <td>@medicinedata.qty</td>
                        <td>@medicinedata.amt</td>
                        <td>@medicinedata.gst</td>
                        <td>@medicinedata.total</td>
                    </tr>
                }
            }
        </table>
    }
}

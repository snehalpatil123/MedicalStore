@model Medicalstore.Models.Receipt

@{
    ViewData["Title"] = "Create";
}

<h1>Add New</h1>

<h4>Receipt</h4>
<hr />
<div class="row">
    
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
               <div class="col-md-6">
            <div class="form-group">
                <label asp-for="cust_id" class="control-label">Enter Customer Name:</label>
                <select asp-for="cust_id" class="form-select">
                    @{
                        if (ViewData["customers"] != null)
                        {
                            List<Customer> customersdata=(List<Customer>)ViewData["customers"];
                            foreach (var customer in customersdata)
                            {
                                <option value="@customer.cust_id">
                                @customer.cust_nm
                                </option>
                            }
                        }
                    }

                </select>
                <span asp-validation-for="cust_id" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="rec_amt" class="control-label">Enter Receipt Ammount</label>
                <input asp-for="rec_amt" class="form-control" />
                <span asp-validation-for="rec_amt" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        </form>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
